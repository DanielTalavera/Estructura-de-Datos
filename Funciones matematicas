#include <iostream>
#include "conio.h"
#include <math.h>

using namespace std;

int main()
{
   int a, b, r, opcion;
   do {
     cout << endl;
     cout << "1.- Suma" << endl;
     cout << "2.- Resta" << endl;
     cout << "3.- Producto" << endl;
     cout << "4.- División" << endl;
     cout << "5.- Al cuadrado" << endl;
     cout << "6.- Raiz cuadrada" << endl;
     cout << "0.- Salir" << endl;
     cout << "Elige una opción: " ;
     cin >> opcion;
     if(opcion==0){
         cout<<"Fin";
     }
     else{
     cout << "Ingrese a: " ;
     cin >> a;
     cout << "Ingrese b: " ;
     cin >> b;
     switch (opcion) {
	    case 1: r = a + b; break;
	    case 2: r = a - b; break;
	    case 3: r = a * b; break;
	    case 4: r = a / b; break;
	    case 5: r = pow(a,2); cout << "El resultado de a es " << r << endl; 
	        r = pow(b,2); cout << "El resultado de b es " << r << endl; break;
	    case 6: r = sqrt(a); cout << "El resultado de a es " << r << endl; 
	        r = sqrt(b); cout << "El resultado de b es " << r << endl; break;
	    default: cout << "Opcion invalida" << endl;
     }
     if ((opcion>=1)&&(opcion<=4)) 
     	cout << "El resultado es " << r << endl;}
   } while (opcion != 0);
   getch();
}
